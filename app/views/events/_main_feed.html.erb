<div class="title is-3">Upcoming Events</div>
    </div>
  </div>
  <div class="level-right">
    <div class="level-item">
      <% if user_signed_in? %>
        <%= link_to "New Event", new_event_path, class: "button is-success" %><br />
      <% end %>
    </div>
  </div>
</div>
<% @events.upcoming.order(:date).each do |e| %>
  <% if e.date >= Date.today %>
    <div class="box">
      <div class="level">
        <div class="level-left">
          <div class="level-item">
            <strong class="title is-4"><%= link_to e.title, e %></strong>
          </div>
        </div>
        <div class="level-right">
          <div class="level-item">
            <span class="icon"><i class="fas fa-calendar-alt"></i></span>
            <%= e.date %>
          </div>
          <% if current_user == e.creator %>
          <div class="level-item">
            <%= link_to e, method: :delete, data: { confirm: "Are you sure?" } do %>
              <span class="icon"><i class="fas fa-trash-alt is-danger"></i></span>
            <% end %>
          </div>
          <% end %>
        </div>
      </div>
      <div class="block">
        <p>
        <span class="icon"><i class="fas fa-laptop-house"></i></span>
          Hosted by <%= link_to e.creator.name, e.creator %>
        </p>
        <p>
          <% if e.attendees.count == 0 %>
            <span class="icon"><i class="fas fa-user-alt-slash"></i></span>
            <%= e.attendees.count %> participant
          <% elsif e.attendees.count == 1 %>
            <span class="icon"><i class="fas fa-user-alt"></i></span>
            <%= e.attendees.count %> participant
          <% elsif e.attendees.count == 2 %>
            <span class="icon"><i class="fas fa-user-friends"></i></span>
            <%= e.attendees.count %> participants
          <% else %>
            <span class="icon"><i class="fas fa-users"></i></span>
            <%= e.attendees.count %> participants
          <% end %>
        </p>
        <p>
          <% if e.comments.count == 0 %>
            <span class="icon"><i class="fas fa-comment-slash"></i></span>
            <%= e.comments.count %> comment
          <% elsif e.comments.count == 1 %>
            <span class="icon"><i class="fas fa-comment"></i></span>
            <%= e.comments.count %> comment
          <% else %>
            <span class="icon"><i class="fas fa-comments"></i></span>
            <%= e.comments.count %> comments
          <% end %>
        </p>
      </div>
      
    </div>
  <% end %>
<% end %>