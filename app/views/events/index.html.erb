<div class="section">
  <div class="container">
    <div class="columns">
      <div class="column is-one-quarter">
    <% if user_signed_in? %>
        <div class="box">
          <%= render 'personal_feed' %>
        </div>
    <% end %>
      </div>
    <div class="column is-half">
    <div class="level">
      <div class="level-left">
        <div class="level-item">
          <div class="title is-3">Upcoming Events</div>
        </div>
      </div>
      <div class="level-right">
        <div class="level-item">
          <% if user_signed_in? %>
            <%= link_to "New Event", new_event_path, class: "button is-success" %><br />
          <% end %>
        </div>
      </div>
    </div>
      <% @events.upcoming.order(:date).each do |e| %>
        <% if e.date >= Date.today %>
          <div class="box">
            <div class="level">
              <div class="level-left">
                <div class="level-item">
                  <strong class="title is-4"><%= e.title %></strong>
                </div>
              </div>
              <div class="level-right">
                <div class="level-item">
                  <span class="icon"><i class="fas fa-calendar-alt"></i></span>
                  <%= e.date %>
                </div>
                <% if current_user == e.creator %>
                <div class="level-item">
                  <%= link_to e, method: :delete, data: { confirm: "Are you sure?" } do %>
                    <span class="icon"><i class="fas fa-trash-alt is-danger"></i></span>
                  <% end %>
                </div>
                <% end %>
              </div>
            </div>
            <div class="block">
              <p>
                Hosted by <%= link_to e.creator.name, e.creator %>
              </p>
              <p>
                <% if e.attendees.count > 1%>
                  <%= e.attendees.count %> people are going
                <% else %>
                  <%= e.attendees.count %> people is going
                <% end %>
              </p>
            </div>
            <div class="control">
              <%= link_to e do %>
                  <p>
                  <span class="icon"><i class="fas fa-info-circle"></i></span>
                  Show Details
                  </p>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
