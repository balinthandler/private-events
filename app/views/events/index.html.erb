<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-half">
      <div class="block">
        <%= link_to "New Event", new_event_path, class: "button is-success" %><br />
      </div>
        <div class="title">Upcoming Events</div>
        <% @events.each do |e| %>
          <div class="box">
            <div class="level">
              <div class="level-left">
                <div class="level-item">
                  <strong class="title is-5"><%= e.title %></strong>
                </div>
              </div>
              <div class="level-right">
                <div class="level-item">
                  <span class="icon"><i class="fas fa-calendar-alt"></i></span>
                  <%= e.date %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
