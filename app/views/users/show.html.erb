<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-half">
        <div class="box">
          <h1 class="title is-3">
            <%= @user.name %>
          </h1>
          <div class="title is-5">
            Hosted events:
          </div>
          <% @user.events.past.order(:date).each do |event| %>
            <div class="block">
              <s>
                <span class="icon"><i class="fas fa-calendar-alt"></i></span>
                <%= event.date %> - <%= link_to event.title, event %>
              </s>
            </div>
          <% end %>
          <% @user.events.upcoming.order(:date).each do |event| %>
            <div class="block">
              <span class="icon"><i class="fas fa-calendar-alt"></i></span>
              <%= event.date %> - <%= link_to event.title, event %>
            </div>
          <% end %>
          <div class="title is-5">
            Attended events:
          </div>
          <% Event.all.past.order(:date).each do |event|%>
            <% if event.attendees.include?(@user) %>
              <div class="block">
                <s>
                  <span class="icon"><i class="fas fa-calendar-alt"></i></span>
                  <%= event.date %> - <%= link_to event.title, event %>
                </s>
            </div>
            <% end %>
          <% end %>
          <% Event.all.upcoming.order(:date).each do |event|%>
            <% if event.attendees.include?(@user) %>
              <div class="block">
                <span class="icon"><i class="fas fa-calendar-alt"></i></span>
                <%= event.date %> - <%= link_to event.title, event %>
            </div>
            <% end %>
          <% end %>
          <%= link_to 'Back to Feed', root_path, class: "button is-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>